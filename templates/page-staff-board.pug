extends layout

block content
  .container

    .m-xs-b-3
      .row
        .col-xs-12
          .large-teal-header-line
            span= post.staff_heading_title
              description!= post.content
      .row
        .col-xs-12.col-md-7
          .lead!= post.staff_heading_description

    if post.staffMembers
      each staffMember in post.staffMembers
        .staff-member.m-xs-b-2.m-xs-t-1
          .row.m-xs-b-2
            .col-xs-12.col-md-2
              if staffMember.photo
                img.m-xs-b-1.m-lg-b-0(src=staffMember.photo.sizes['profile-photo'])
              else
                .placeholder-person.m-xs-b-1.m-lg-b-0
            .col-xs-12.col-md-7
              h3.m-xs-t-0.name= staffMember.name
              .job-titles!= staffMember.jobTitles
              .bio!= staffMember.bio

          .row
            .col-xs-12
              hr

    .m-xs-t-1
      .row
        .col-xs-12
          .large-teal-header-line
            span= post.board_title
              description!= post.content
      .row
        .col-xs-12.col-md-7
          .lead!= post.board_description

    .m-xs-b-6
      .row
        .col-xs-12.col-sm-7.col-md-5
          h3.m-xs-b-0 The Board of Directors of the Alliance for Youth Organizing
          .meta  Affiliates listed for identification purposes only.
      if post.the_board_of_directors_of_the_alliance_for_youth_organizing
        .row
          .col-xs-12
            .board-members
              each boardMember in post.the_board_of_directors_of_the_alliance_for_youth_organizing
                .board-member
                  div
                    strong= boardMember.name
                  div= boardMember.title

