.col-xs-12.col-sm-6.m-xs-b-3
  article.campaign
    if !post.thumbnail
      .placeholder
    else
      a(href=post.permalink)
        .filter
          .overlay
          img.mono(src=post.thumbnail.url)
    
    .row
      .col-xs-12.col-md-7
        h3.title #[a(href=post.permalink)= post.title]
        .lead.m-xs-b-1 #[a(href=post.permalink)= post.subtitle]
        a.button.outline(href=post.permalink) More
