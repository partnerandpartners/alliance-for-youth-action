extends layout

block content
  .container.m-xs-y-3
    .row
      .col-xs-12
        h1= post.title
        div!= post.content

    .row
      if site.posts
        - var ogPost = post
        each post in site.posts
          if post.type === 'report'
            .col-xs-12.col-md-2
              a(href=post.permalink)
                if post.thumbnail
                  img(src=post.thumbnail.url)
                else
                  .placeholder
              
              if post.add_pdf
                a(href=post.add_pdf.url)= post.title

        - ogPost = post
